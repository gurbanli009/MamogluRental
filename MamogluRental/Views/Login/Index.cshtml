<!-- Login Section -->
<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>Login</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 mb-5">
                <form id="loginForm" action="/Account" method="post">
                    <div class="form-group row">
                        <div class="col-md-12 mb-4">
                            <input type="email" id="loginEmail" class="form-control" placeholder="Email address" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 mb-4">
                            <input type="password" id="loginPassword" class="form-control" placeholder="Password" 
                                   required minlength="8"
                                   title="Password must be at least 8 characters">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Login">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 text-center">
                            <a href="javascript:void(0);" class="text-primary" onclick="showForgotPasswordForm()">Forgot password?</a>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 text-center">
                            <p>Haven't an account? <a href="javascript:void(0);" class="text-primary" onclick="showSignupForm()">Sign up</a></p>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-4 ml-auto">
                <div class="bg-white p-3 p-md-5">
                    <h3 class="text-black mb-4">Contact Info</h3>
                    <ul class="list-unstyled footer-link">
                        <li class="d-block mb-3">
                            <span class="d-block text-black">Address:</span>
                            <span>Hasan Aliyev street, Ganjlik m/s</span>
                        </li>
                        <li class="d-block mb-3"><span class="d-block text-black">Phone:</span><span>+994 50 500 00 00</span></li>
                        <li class="d-block mb-3"><span class="d-block text-black">Email:</span><span>mamoglurentacar@gmail.com</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Forgot Password Form -->
<div class="site-section bg-light" id="forgot-password-section" style="display: none;">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>Forgot Password</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 mb-5">
                <form action="#" method="post">
                    <div class="form-group row justify-content-center">
                        <div class="col-md-12 mb-4">
                            <input type="email" class="form-control text-center" placeholder="Enter your email" required>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Reset Password">
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="javascript:void(0);" class="btn btn-secondary text-white py-3 px-5" onclick="backToLogin()">Back to Login</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Sign Up Form -->
<div class="site-section bg-light" id="signup-section" style="display: none;">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>Sign Up</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 mb-5">
                <form action="/Account" method="post">
                    <div class="form-group row justify-content-center">
                        <div class="col-md-12 mb-4">
                            <input type="text" class="form-control text-center" placeholder="Full Name" required>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-12 mb-4">
                            <input type="email" class="form-control text-center" placeholder="Email address" required>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-12 mb-4">
                            <input type="password" class="form-control text-center" placeholder="Password" 
                                   required minlength="8"
                                   title="Password must be at least 8 characters">
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Sign Up">
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="javascript:void(0);" class="btn btn-secondary text-white py-3 px-5" onclick="backToLogin()">Back to Login</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script>
    function showForgotPasswordForm() {
        document.getElementById('contact-section').style.display = 'none';
        document.getElementById('forgot-password-section').style.display = 'block';
        document.getElementById('signup-section').style.display = 'none';
    }

    function showSignupForm() {
        document.getElementById('contact-section').style.display = 'none';
        document.getElementById('forgot-password-section').style.display = 'none';
        document.getElementById('signup-section').style.display = 'block';
    }

    function backToLogin() {
        document.getElementById('forgot-password-section').style.display = 'none';
        document.getElementById('signup-section').style.display = 'none';
        document.getElementById('contact-section').style.display = 'block';
    }

    // Admin login redirection
    document.getElementById('loginForm').addEventListener('submit', function(e) {
        var email = document.getElementById('loginEmail').value.trim();
        var password = document.getElementById('loginPassword').value;
        if (email === 'admin@gmail.com' && password === 'admin123') {
            e.preventDefault();
            window.location.href = '/CarManagement/Index';
        }
        // Otherwise, let the form submit normally
    });
</script>
